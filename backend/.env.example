# Backend Environment Variables
# Copy this file to .env and customize as needed

# Database URL (defaults to SQLite in app/core/database/app_data.db)
# SQLALCHEMY_DATABASE_URL=sqlite:///./app_data.db

# For PostgreSQL:
# SQLALCHEMY_DATABASE_URL=postgresql://user:password@localhost:5432/meal_genie

# Cloudinary Configuration (for image uploads)
# Get credentials from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# GitHub Integration (for user feedback)
# Create a fine-grained personal access token with Issues read/write permission
# See: https://github.com/settings/tokens?type=beta
GITHUB_TOKEN=github_pat_xxxxx
GITHUB_REPO=your-username/recipe-app
