# Backend Environment Variables
# Copy this file to .env and fill in your values

# ── Database ─────────────────────────────────────────────────────────────────
# Database URL (defaults to SQLite in app/database/app_data.db)
# SQLALCHEMY_DATABASE_URL=sqlite:///./app_data.db

# For PostgreSQL (Production/Railway):
# SQLALCHEMY_DATABASE_URL=postgresql://user:password@localhost:5432/meal_genie

# ── Clerk Authentication ─────────────────────────────────────────────────────
# Get these from https://dashboard.clerk.com
CLERK_SECRET_KEY=sk_test_xxx
CLERK_PUBLISHABLE_KEY=pk_test_xxx

# Development Mode - bypass JWT validation for local development
# Set to true to use DEV_USER_ID instead of requiring Clerk tokens
AUTH_DISABLED=true
DEV_USER_ID=1

# ── Cloudinary (Image Upload) ────────────────────────────────────────────────
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ── GitHub (Issue Sync) ──────────────────────────────────────────────────────
GITHUB_TOKEN=github_pat_xxx
GITHUB_REPO=username/repo-name

# ── Google Gemini AI ─────────────────────────────────────────────────────────
# Separate keys for different features (optional, can use same key)
GEMINI_IMAGE_API_KEY=your_api_key
GEMINI_TIP_API_KEY=your_api_key
GEMINI_ASSISTANT_API_KEY=your_api_key
